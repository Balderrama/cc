<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Compu Componentes{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/owl.carousel.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <header>
        <div class="container inner-header">
            <figure class="logo">
                <img src="{{ asset('img/logo-small.jpg') }}" alt="Compu Componentes">
            </figure>
            {#BOTON PARA MÓVIL#}
            <div id="menu-toggle" class="hidden-md hidden-lg">
                <div id="hamburger">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </div>
                <div id="cross">
                    <span></span>
                    <span></span>
                </div>
            </div>
            <nav class="menu">
                <ul class="menu-list">
                    <li class="list-item"><a href="">Inicio</a></li>
                    <li class="list-item"><a href="">Empresa</a></li>
                    <li class="list-item"><a href="">Productos</a>
                        <ol class="submenu-list">
                            {% for i in 0..22 %}
                                <li class="sublist-item">
                                    <a href="#">Almacenamiento Externo</a>
                                </li>
                            {% endfor %}
                        </ol>
                    </li>
                    <li class="list-item"><a href="">Servicios</a>
                        <ol class="submenu-list">
                            {% for i in 0..22 %}
                                <li class="sublist-item">
                                    <a href="#">Reparación</a>
                                </li>
                            {% endfor %}
                        </ol>
                    </li>
                    <li class="list-item"><a href="">Contacto</a></li>
                </ul>
            </nav>
            <div class="searcher menu hidden-xs hidden-sm">
                <input type="search" placeholder="¿Qué estás buscando?" class="search-box">
                <button class="searc-product">B</button>
            </div>
            <div class="options-container menu ">
                <a href="" class="log-in">Iniciar Sesión</a>
                <a href="" class="car-quantiqy">(3)</a>
            </div>
        </div>
    </header>
        {% block body %}

        {% endblock %}
    <script src="{{ asset('js/jquery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
