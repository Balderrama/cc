{% extends "@Front/Default/base.html.twig" %}
{% block title %}Inicio{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
        <section class="banners">
            <div class="owl-banners">
                {% for i in 0..2 %}
                    <div class="item">
                        <img src="{{ asset('img/banners/banner-home-01.jpg') }}" alt="">
                    </div>
                {% endfor %}
            </div>
        </section>

    <div class="container">
        <section class="products">
            <h3 class="title-section">Los más vendidos</h3>

            <div class="flex-container">
                <div class="owl-productos">
                    {% for p in 0..5 %}
                        <div class="flex-item item">
                            <figure class="prod-image">
                                <img src="{{ asset('img/producto.jpg') }}" alt="">
                                <figcaption>
                                    MONITOR ACER 19.5" V206HQL HD
                                    VGA LED 1366X768 T.R. 5 MS NEGRO
                                </figcaption>
                            </figure>
                            <div class="bottom">
                                <div class="prices">
                                    <h4 class="old-price">$5,317.00</h4>
                                    <h4 class="current-price">$,257.20</h4>
                                </div>
                                <a href="" class="addToCar">Agregar al Carrito</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <section class="services">
            <h4>Servicios</h4>
            <div class="flex-grid">
                <div class="flex-item">
                    <h2 class="title">Reparación de <em>pc's y laptops</em></h2>
                    <img src="{{ asset('img/servicios/secciones-reparacion.jpg') }}" alt="">
                </div>
                <div class="flex-item">
                    <h2 class="title">Instalación de <em>redes de oficina</em></h2>
                    <img src="{{ asset('img/servicios/secciones-redes.jpg') }}" alt="">
                </div>
                <div class="flex-item">
                    <h2 class="title">Instalación de <em>alarmas de seguridad</em></h2>
                    <img src="{{ asset('img/servicios/secciones-alarmas.jpg') }}" alt="">
                </div>
                <div class="flex-item">
                    <h2 class="title">Instalación de <em>cámaras de seguridad</em></h2>
                    <img src="{{ asset('img/servicios/secciones-videocamaras.jpg') }}" alt="">
                </div>
            </div>
        </section>
    </div>


{% endblock %}
{% block javascripts %}
    <script>
        $('.owl-banners').owlCarousel({
            dots: true,
            items: 1,
            loop: true,
            autoplay: true,
            autoPlayHoverPause: true,
            autoPlaySpeed: 11000
        });

        $('.owl-productos').owlCarousel({
            dots: true,
            items: 4,
            loop: true,
            autoplay: true,
            autoPlayHoverPause: true,
            autoPlaySpeed: 11000
        });
    </script>
{% endblock %}
